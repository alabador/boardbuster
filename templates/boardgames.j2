<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BoardBuster - Manage Board Games</title>
    <link rel="stylesheet" href="../static/style.css">
</head>
<body>
    <header>
        {% include 'navbar.j2' %}
    </header>

    <h1>Manage Board Games</h1>

    <!-- Add New Board Game Form -->
    <form method="POST">
        <h2>Add New Board Game</h2>
        <label>Title:</label>
        <input type="text" name="title" required>
        <label>Category ID:</label>
        <select name="categoryID" id="addCategoryID" required>
            {% if categories %}
            {% for key in categories %}
            <option value="{{key['categoryID']}}">{{key['categoryID']}}</option>
            {% endfor %}
            {% endif %}
        </select>
        <label>Player Count:</label>
        <input type="number" name="playerCount" required>
        <label>Cost:</label>
        <input type="number" step="0.01" name="gameCost" required>
        <label>Quantity:</label>
        <input type="number" name="quantity" required>
        <input type="submit" value="Add Board Game" name="Add_BoardGame" class="btn">
    </form>

    <!-- Board Games Table -->
    <h2>Board Game Inventory</h2>
    <table>
        <thead>
            <tr>
                <th>Game ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Player Count</th>
                <th>Cost</th>
                <th>Quantity</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for game in boardgames %}
            <tr>
                <td>{{ game.gameID }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.categoryID }}</td>
                <td>{{ game.playerCount }}</td>
                <td>{{ game.gameCost }}</td>
                <td>{{ game.quantity }}</td>
                <td>{{ 'Yes' if game.quantity > 0 else 'No' }}</td>
                <td>
                    <a href="/edit_boardgame/{{ game.gameID }}">Edit</a>
                    <a href="/delete_boardgame/{{ game.gameID }}">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <footer>
        <p>Â© 2024 Austin Labador & Vincent Le</p>
    </footer>
</body>
</html>
